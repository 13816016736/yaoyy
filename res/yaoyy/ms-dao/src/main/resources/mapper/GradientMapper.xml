<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ms.dao.GradientDao">
    <resultMap id="GradientResultMap" type="com.ms.dao.model.Gradient">
            <id column="id"  property="id" />
            <result column="commodity_id"  property="commodityId" />
            <result column="start"  property="start" />
            <result column="end"  property="end" />
            <result column="price"  property="price" />
            <result column="unit"  property="unit" />
            <result column="create_time"  property="createTime" />
            <result column="update_time"  property="updateTime" />
        
    </resultMap>

    <resultMap id="GradientResultMapVo" type="com.ms.dao.vo.GradientVo" extends="GradientResultMap">

    </resultMap>

    <sql id="Base_Column_List">
        id,commodity_id,start,end,price,unit,create_time,update_time
    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultMap="GradientResultMap">
        select
        <include refid="Base_Column_List" />
        from gradient
        where id = #{id}
    </select>

    <select id="findAll"  resultMap="GradientResultMap">
        select
        <include refid="Base_Column_List" />
        from gradient
    </select>

    <select id="findByParams" resultMap="GradientResultMapVo" parameterType="com.ms.dao.vo.GradientVo">
        select
        <include refid="Base_Column_List" />
        from gradient
        <where>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </select>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from gradient
        where id = #{id}
    </delete>

    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="com.ms.dao.model.Gradient">
        insert into
        gradient (commodity_id,start,end,price,unit,create_time,update_time)
        values
        (#{commodityId},#{start},#{end},#{price},#{unit},#{createTime},#{updateTime})
    </insert>

    <update id="update" parameterType="com.ms.dao.model.Gradient">
        update gradient
        <set>
                                                        
            <if test="commodityId != null">
                commodity_id = #{commodityId},
            </if>
                                            
            <if test="start != null">
                start = #{start},
            </if>
                                            
            <if test="end != null">
                end = #{end},
            </if>
                                            
            <if test="price != null">
                price = #{price},
            </if>
                                            
            <if test="unit != null">
                unit = #{unit},
            </if>
                                            
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
                                            
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
                            
        </set>
        where id = #{id}
    </update>

    <!-- 批量更新 -->
    <insert id="batchCreate" useGeneratedKeys="true"  parameterType="com.ms.dao.model.Gradient">
        insert into
        gradient (commodity_id,start,end,price,unit,create_time,update_time)
        values
        <foreach collection="list" item="item" index="index" separator="," >
            (#{item.commodityId},#{item.start},#{item.end},#{item.price},#{item.unit},#{item.createTime},#{item.updateTime})
        </foreach>
    </insert>

    <delete id="deleteByCommodityId" parameterType="java.lang.Integer">
        delete from gradient
        where commodity_id = #{id}
    </delete>

    <select id="findByCommodityId"  resultMap="GradientResultMap">
        select
        <include refid="Base_Column_List" />
        from gradient where commodity_id = #{id} ORDER BY price ASC
    </select>

</mapper>